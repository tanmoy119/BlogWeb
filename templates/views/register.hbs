          <i class="icon fas fa-user"></i>
          <i class="error error-icon fas fa-exclamation-circle"></i>
          <i class="valid valid-icon fas fa-check-circle"></i>
        </div>
        <div class="error error-txt">Name can't be blank</div>
      </div>
      
      <!-- Phone Number -->
      <div class="field phno">
        <div class="input-area">
          <input type="number" name='number' placeholder="Phone Number">
          <i class="icon fas fa-phone-alt"></i>
          <i class="error error-icon fas fa-exclamation-circle"></i>
          <i class="valid valid-icon fas fa-check-circle"></i>
        </div>
        <div class="error error-txt">Phone Number can't be blank</div>
      </div>
      
      <!-- Email -->
      <div class="field email">
        <div class="input-area">
          <input type="text" name='email' placeholder="Email Address">
          <i class="icon fas fa-envelope"></i>
          <i class="error error-icon fas fa-exclamation-circle"></i>
          <i class="valid valid-icon fas fa-check-circle"></i>
        </div>
        <div class="error error-txt">Email can't be blank</div>
      </div>
      
      <!-- Password -->
      <div class="field password">
        <div class="input-area">
          <input type="password" name='pass' placeholder="Password">
          <i class="icon fas fa-lock"></i>
          <i class="error error-icon fas fa-exclamation-circle"></i>
          <i class="valid valid-icon fas fa-check-circle"></i>
        </div>
        <div class="error error-txt">Password can't be blank</div>
      </div>
      
      <!-- Confirm Password -->
      <div class="field confirmpassword">
        <div class="input-area">
          <input type="password" name='cpass' placeholder="Confirm Password">
          <i class="icon fas fa-lock"></i>
          <i class="error error-icon fas fa-exclamation-circle"></i>
          <i class="valid valid-icon fas fa-check-circle"></i>
        </div>
        <div class="error error-txt">Confirm Password can't be blank</div>
      </div>
      

      <!-- profession -->
      <div class="field confirmpassword">
        <div class="input-area">
          <input type="text" name='profession' placeholder="profession">
          <i class="icon fas fa-user-tie"></i>
          <i class="error error-icon fas fa-exclamation-circle"></i>
          <i class="valid valid-icon fas fa-check-circle"></i>
        </div>
        <div class="error error-txt">Profession</div>
      </div>
      

       <!-- country -->
      <div class="field confirmpassword">
        <div class="input-area">
          <input type="text" name='country' placeholder="country">
          <i class="icon fas fa-globe-africa"></i>
          <i class="error error-icon fas fa-exclamation-circle"></i>
          <i class="valid valid-icon fas fa-check-circle"></i>
        </div>
        <div class="error error-txt">country</div>
      </div>

        <!-- File -->
      <div class="field confirmpassword">
        <div class="input-area">
          <input style="padding-top:9px ;" type="file" name='uploaded_file' >
          <i class="icon fas fa-images"></i>
          <i class="error error-icon fas fa-exclamation-circle"></i>
          <i class="valid valid-icon fas fa-check-circle"></i>
        </div>
        <div class="error error-txt">file</div>
      </div>
      

     
